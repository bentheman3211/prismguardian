{
  "version": 2,
  "builds": [
    {
      "src": "api/verification.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/verify/(.+)",
      "dest": "api/verification.js?token=$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/verification.js"
    },
    {
      "src": "/(?!api|verify)(.*\\..*)",
      "dest": "public/$1"
    },
    {
      "src": "/(?!api|verify).*",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "HCAPTCHA_SECRET": "@hcaptcha_secret",
    "HCAPTCHA_SITEKEY": "@hcaptcha_sitekey"
  }
}
