{
  "version": 2,
  "buildCommand": "echo 'No build needed'",
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/verification.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/verification.js"
    },
    {
      "src": "/verify/(.*)",
      "dest": "api/verification.js"
    },
    {
      "src": "/landing",
      "dest": "public/landing.html"
    },
    {
      "src": "^/$",
      "dest": "public/landing.html"
    },
    {
      "src": "/(.*)\\.html$",
      "dest": "public/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "api/verification.js"
    }
  ]
}
